[harbor]
    charset UTF-8
    groups plan/groups.plan
    grandAgents 4
    gzipComp on


#
#  Port settings
#
[port 2020]
     docker http
     #[permission]
     #     admit ip 127.0.0.1/32
     #     admit ip ::1/128
     #     refuse ip *

[port 2024]
    [secure]
        cert      cert/oreore.crt
        key       cert/oreore.key
        keyStorePass orepas
    supportH2  on

[port 2025]
    docker ajp
    [permission]
         admit ip 127.0.0.1/32
         admit ip ::1/128
         refuse ip *

[port 2029]
    docker fcgi


#
#  Location settings
#
[city *]
    [town /]
        location www/root
        welcome  index.html


    [town /cgi-demo/]
        location www/cgi-demo
        welcome  index.html
        [club *.cgi]
            docker cgi

        [club *.bat]
            docker cgi

        [club *.php]
            docker phpCgi

    [town /rack-demo]
       [club *]
          docker terminal
          config www/rack-demo/config.ru
          environment production

    [log log/access.log]
        format %a %l %u %t "%r" %>s %b

    [log log/agent.log]
        format %{User-Agent}i

    [log log/referer.log]
        format %{Referer}i -> %U


