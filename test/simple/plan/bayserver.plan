[harbor]
    charset UTF-8
    groups plan/groups.plan
    grandAgents 4
    #gzipComp on
    logLevel debug

    # For windows
    controlPort 2222    

#
#  Port settings
#
[port 2020]
     docker http
     #[permission]
     #     admit ip 127.0.0.1/255.0.0.0
     #     admit ip ::1/::ffff:ffff
     #     refuse ip *

[port 2024]
    [secure]
        #keyStore  cert/oreore.p12
        cert      cert/oreore.crt
        key       cert/oreore_key.p8
        keyStorePass orepas

[port 2025]
    docker ajp
    [permission]
         admit ip 127.0.0.1/255.0.0.0
         admit ip ::1/::ffff:ffff
         refuse ip *

[port 2029]
    docker fcgi


#
#  Location settings
#
[city *]
    [town /]
        location www/root
        welcome  index.html


    [town /cgi-demo/]
        location www/cgi-demo
        welcome  index.html
        [club *.cgi]
            docker cgi

        [club *.bat]
            docker cgi

        [club *.php]
            docker php_cgi

    [town /rack-demo]
       [club *]
          docker terminal
          config www/rack-demo/config.ru
          environment production

    [log log/access.log]
        format %h %l %u %t "%r" %>s %b

    [log log/agent.log]
        format %{User-Agent}i

    [log log/referer.log]
        format %{Referer}i -> %U


